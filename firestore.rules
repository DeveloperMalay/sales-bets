rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User's bets subcollection - can only access their own bets
    match /users/{userId}/bets/{betId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Teams are readable by all authenticated users
    // Only admins can write (you'll need to add admin claims later)
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Events are readable by all authenticated users
    // Only admins can write
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Global bets collection - users can read all bets but only create their own
    match /bets/{betId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // Streams are readable by all authenticated users
    // Only admins can write
    match /streams/{streamId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}